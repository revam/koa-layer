{
  "name": "koa-match",
  "version": "1.2.1",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "description": "A small matching library for Koa.",
  "scripts": {
    "lint": "tsc --noEmit -p . && tslint src/**/*.ts",
    "test": "jest",
    "build": "tsc -p .",
    "pretest": "npm run lint",
    "prebuild": "npm run test",
    "prepublish": "npm run build",
    "postpublish": "del-cli lib"
  },
  "author": "Mikal Stordal <mikalstordal@gmail.com>",
  "license": "MIT",
  "keywords": [
    "koa",
    "nodejs",
    "router",
    "middleware",
    "koa-middleware",
    "typescript"
  ],
  "dependencies": {
    "http-errors": "^1.6.2",
    "is-iterable": "^1.1.0",
    "koa-compose": "^4.0.0",
    "mime-types": "^2.1.17",
    "path-to-regexp": "^2.1.0"
  },
  "devDependencies": {
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^22.0.1",
    "@types/koa": "^2.0.39",
    "@types/koa-compose": "^3.2.2",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^8.0.46",
    "@types/path-to-regexp": "^1.7.0",
    "del-cli": "^1.1.0",
    "jest": "^22.1.1",
    "koa": "^2.4.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.1"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revam/koa-match.git"
  },
  "bugs": {
    "url": "https://github.com/revam/koa-match/issues"
  },
  "homepage": "https://github.com/revam/koa-match#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
